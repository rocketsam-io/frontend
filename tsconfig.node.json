{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "resolveJsonModule": true,
  "strict": true,
  "compilerOptions": {
    "composite": true,
    "module": "ES6",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "strict": true
  },
  "vueCompilerOptions": {
    "plugins": ["@volar/vue-language-plugin-pug"]
  }
}
